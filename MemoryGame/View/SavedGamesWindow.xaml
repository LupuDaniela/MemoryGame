<Window x:Class="MemoryGame.View.SavedGamesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Jocuri salvate" Height="300" Width="400">
    <Window.Background>
        <ImageBrush ImageSource="/Images/BGcategories.png" Stretch="UniformToFill" />
    </Window.Background>
    <StackPanel>
        <ListBox x:Name="listBoxSavedGames" Margin="10" Background="#324E4A" Foreground="White"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Load" Click="Load_Click" Margin="5" Background="#324E4A" Foreground="White" Width="50" />
            <Button Content="Cancel" Click="Cancel_Click" Margin="5" Background="#324E4A" Foreground="White" Width="51"/>
        </StackPanel>
    </StackPanel>
</Window>
